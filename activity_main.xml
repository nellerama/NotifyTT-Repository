<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.notifytt.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pale_blue" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/sky_blue"
            android:orientation="vertical"
            android:padding="12dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@color/pale_blue"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageViewTTEC"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        android:padding="4dp"
                        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

                    <TextView
                        android:id="@+id/TextViewTTECBanner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:text="REPORT A PROBLEM: 800-BULB"
                        android:textColor="@color/navy"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextViewTTECTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="3"
                    android:ems="10"
                    android:text="T&amp;TEC"
                    android:textColor="@color/yellow" />

                <TextView
                    android:id="@+id/TextViewTTECUpdates"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Filler Text"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/pale_blue"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageViewWASA"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_border"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/abc_ab_share_pack_mtrl_alpha" />

                    <TextView
                        android:id="@+id/TextViewWasaBanner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:text="WATER RESTRICTIONS IMPLEMENTED"
                        android:textColor="@color/navy"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/TextViewWASATitle"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:text="WASA"
                    android:textColor="@color/sky_blue" />

                <TextView
                    android:id="@+id/TextViewWasaUpdates"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="Filler Text"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>